@{
    ViewData["Title"] = "Result";
}

<h1>@ViewData["Title"]</h1>
<div class="flex-grow-1 d-flex flex-column justify-content-center align-items-center gap-2">
    <h2 class="m-0 p-0 text-center">
        Score:
        @{
            int score = int.TryParse(Context.Request.Query["score"], out var s) ? s : 0;
            int total = int.TryParse(Context.Request.Query["total"], out var t) ? t : 0;
            double percent = total != 0 ? (double)score / (double)total * 100f : 0f;
            <text>@percent.ToString("0.00")%</text>
        }
        (@Context.Request.Query["score"] / @Context.Request.Query["total"])
    </h2>
    <a class="btn btn-primary btn-lg" asp-controller="Home" asp-action="Index">Restart</a>
</div>
