@model IEnumerable<AnimeQuiz.Models.StaffDto>

@{
    ViewData["Title"] = "Staffs";
}

<div class="d-flex justify-content-between align-items-center">
    <h1>@ViewData["Title"]</h1>
    <a class="text-decoration-none" asp-controller="StaffPage" asp-action="New">
        <h2>
            Create New
        </h2>
    </a>
</div>

<hr />

<style>
    .row + .row {
        border-top: 1px solid black;
        margin-top: 0.5em;
        padding-top: 0.5em;
    }
</style>

@foreach (StaffDto staffDto in Model)
{
    <div class="row">
        <div class="d-flex justify-content-between align-items-center">
            <a class="text-decoration-none" asp-controller="StaffPage" asp-action="Details" asp-route-id="@staffDto.StaffId">
                <h3 class="m-0 p-0">@staffDto.StaffName</h3>
            </a>
            <form class="border border-2 border-danger bg-white fs-6 p-1" style="right: 1em; bottom: 1em;" method="POST" asp-controller="StaffPage" asp-action="Delete" asp-route-id="@staffDto.StaffId">
                <button type="submit" class="btn btn-close"></button>
            </form>
        </div>
    </div>
}
