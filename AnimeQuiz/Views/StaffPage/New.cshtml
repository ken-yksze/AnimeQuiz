@{
    ViewData["Title"] = "New Staff";
}

<div class="d-flex justify-content-between align-items-center">
    <h1>@ViewData["Title"]</h1>
    <a class="text-decoration-none" href="javascript:history.back()">
        <h2>
            Back
        </h2>
    </a>
</div>

<hr />

<form method="POST"
      asp-controller="StaffPage"
      asp-action="Add"
      class="mt-3 flex-grow-1 d-flex flex-column gap-3"
      id="staff-add-form">
    <div>
        <label for="staff-name">Staff Name:</label>
        <input type="text" name="StaffName" id="staff-name" />
    </div>

    <div class="d-flex justify-content-end gap-3">
        <button type="submit" class="btn btn-primary btn-lg" id="add-button">
            Add
        </button>
    </div>
</form>
