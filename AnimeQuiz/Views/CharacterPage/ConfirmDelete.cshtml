@model AnimeQuiz.Models.CharacterDto

@{
    ViewData["Title"] = $"Delete {Model.CharacterName}";
}

<div class="d-flex justify-content-between align-items-center">
    <h1>@ViewData["Title"]</h1>
    <a class="text-decoration-none" href="javascript:history.back()">
        <h2>
            Back
        </h2>
    </a>
</div>

<hr />

<h3>Are you sure you want to delete this?</h3>

<div class="mt-3">
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CharacterName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CharacterName)
        </dd>
    </dl>

    <form asp-controller="CharacterPage" asp-action="Delete" asp-route-id="@Model.CharacterId">
        <button type="submit" class="btn btn-danger btn-lg">Delete</button>
    </form>
</div>
