@model AnimeQuiz.Models.CharacterVersionDto

@{
    ViewData["Title"] = $"Edit {Model.CharacterDto!.CharacterName}: {Model.VersionName ?? "Default"}";
}

<div class="d-flex justify-content-between align-items-center">
    <h1>@ViewData["Title"]</h1>
    <a class="text-decoration-none" href="javascript:history.back()">
        <h2>
            Back
        </h2>
    </a>
</div>

<hr />

<div class="row">
    <div class="col-4">
        @if (Model.VersionName != null)
        {
            <form class="d-flex flex-column gap-4" asp-controller="CharacterVersionPage" asp-action="Update" asp-route-id="@Model.CharacterVersionId">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group d-flex flex-column gap-2">
                    <label asp-for="VersionName" class="control-label"></label>
                    <input asp-for="VersionName" class="form-control" />
                    <span asp-validation-for="VersionName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary btn-lg">Save</button>
                </div>
            </form>
        }
        else{
            <p>Cannot edit Default Version</p>
        }
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
